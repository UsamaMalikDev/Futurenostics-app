# Application
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Database
MONGODB_URI=mongodb://taskmanager_user:taskmanager_password@localhost:27017/taskmanager?authSource=taskmanager

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# Redis Configuration (optional, for production caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Bull Queue Configuration (optional, for production background jobs)
REDIS_QUEUE_HOST=localhost
REDIS_QUEUE_PORT=6379
REDIS_QUEUE_PASSWORD=
REDIS_QUEUE_DB=1

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Cache Configuration
CACHE_TTL=300
CACHE_MAX=100 